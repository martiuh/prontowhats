{
  "name": "prontowhats",
  "version": "1.0.0",
  "description": "Codebase for prontowhats.com",
  "scripts": {
    "watch-css": "postcss src/css/main.css -o dist/css/style.css -w",
    "build-css": "cross-env ENV_BUILD=prod postcss src/css/main.css -o dist/css/style.css",
    "watch-js": "esbuild src/ts/main.ts --bundle --sourcemap=inline --target=es2016 --outfile=dist/js/main.js --define:SEND_MESSAGE=false --watch",
    "debug-js": "esbuild src/ts/main.ts --bundle --sourcemap=inline --target=es2016 --outfile=dist/js/main.js --define:SEND_MESSAGE=false --servedir=./",
    "build-js": "esbuild src/ts/main.ts --bundle --minify --target=es2016 --outfile=dist/js/main.js --define:SEND_MESSAGE=true",
    "watch-pug": "rimraf dist/index.html && pug src/pug/index.pug -o dist --watch",
    "build-pug": "rimraf dist/index.html && pug src/pug/index.pug -o dist",
    "watch-public": "npm run build-public --watch",
    "build-public": "cpx \"public/*\" dist",
    "sync": "browser-sync start --server dist/ --files src/*",
    "start": "concurrently \"npm:watch-css\" \"npm:watch-js\" \"npm:watch-pug\" \"npm:watch-public\" \"npm:sync\"",
    "dev": "concurrently \"npm:watch-css\" \"npm:debug-js\" \" npm:watch-pug\" ",
    "build": "rimraf dist && npm run build-pug && npm run build-js && npm run build-css && npm run build-public",
    "make:countries-list": "node scripts/createCountriesList.js",
    "test": "jest --config='src/ts/jest.config.js'",
    "test:w": "npm run test -- --watch"
  },
  "author": "Tonatiuh Gonz√°lez <martiuh@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@types/google.analytics": "^0.0.41",
    "@types/gtag.js": "^0.0.4",
    "alpinejs": "^2.8.0",
    "esbuild-runner": "^1.3.2",
    "pug-cli": "^1.0.0-alpha6",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.0",
    "@testing-library/dom": "^7.30.4",
    "@types/jest": "^26.0.23",
    "@types/pug": "^2.0.4",
    "autoprefixer": "^10.0.1",
    "browser-sync": "^2.27.7",
    "chokidar": "^3.5.1",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "esbuild": "^0.8.46",
    "esbuild-jest": "^0.5.0",
    "jest": "^26.6.3",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "postcss-copy": "^7.1.0",
    "postcss-import": "^14.0.0",
    "pug": "^2.0.4",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.0.3"
  }
}
